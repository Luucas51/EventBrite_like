<h1> Voici tout les événements présent dans ta ville </h1>

<div class="row">
<% Event.all.each do |i| %>
  <div class="col-sm-4 mx-auto pt-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= i.title %></h5>
        <p class="card-text"><%= i.content %></p>
        <div class="btn btn-outline-dark btn-lg link_no_decoration"><%= link_to "En savoir plus", root_path %></div>
      </div>
    </div>
  </div>
<%end%>
</div>
