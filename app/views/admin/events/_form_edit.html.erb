<div class="container">
  <%= form_tag url_for(action: 'update'), method: "patch" do %>
    <div class="form-group">
      <label>Titre</label>
       <%= text_field_tag 'title', @event.title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label>Nom</label>
      <%= text_field_tag 'description', @event.description, class: 'form-control' %>
    </div>
  <div class="form-row">
     <div class="form-group col-md-5">
        <label>Prix</label>
        <%= number_field_tag 'price', @event.price, class: 'form-control' %>
      </div>

      <div class="form-group">
      <label>Durée en min</label>
      <%= number_field_tag 'duration', @event.duration, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label>Lieu</label>
      <%= text_field_tag 'location', @event.location, class: 'form-control' %>
    </div>

    <div class="form-group col-md-5">
        <label>Date de l'événement </label>
        <%= datetime_field_tag 'start_date', @event.start_date, class: 'form-control' %>
      </div>
    

  <div class="btn">
      <%= submit_tag 'Modifier', class: 'btn btn-outline-warning btn-m' %>
  </div>
<% end %>




</div>
