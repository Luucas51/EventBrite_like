<style>
a {
  text-decoration: none;
  color: black;
}
a:hover {
  text-decoration: none;
  color: black;
}

.size-avatar {
  width: 150px;
  height: 150px;
  border-radius: 50%;
}
</style>


<%if @id.avatar.attached?%>
<%= image_tag @id.avatar, class: " mx-auto size-avatar"%>
<%else%>
  <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
<%end%>

<div class="container-fluid text-center">
<h2 class="texte-bienvenue mt-5">Mon profile : </h2>
  Email : <%=@id.email%> <br>
  Prénom : <%=@id.first_name%> <br>
  Nom : <%=@id.last_name%> <br>
 <!-- Description : <%=@id.description%> <br>-->

  <div class="btn btn-outline-warning btn-s mt-5"><%= link_to "Changer mot de passe", edit_user_registration_path %></div>


	<% if @event.count == 0 %>
<h2 class="texte-bienvenue mt-5">Vous n'avez pas encore crée un événement </h2>
	<% else %>
  	<h2 class="my-4 text-center">Voila tout vos évenement actuelle</h2>
	        <% @event.each do |event| %>
	          	<div class="card-body">
	            <h3 class="card-text"><%= event.title %></h3>
	            <p><a class="btn btn-outline-warning btn-l" href="<%= event_path(event.id)%>" role="button">Voir plus</a></p>
	            </div>
	        <% end %>
    <% end %>

 <h3>Changer d'avatar ?</h3>
<%= form_tag user_avatars_path(@id), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "mettre à jour" %>
<% end %>





